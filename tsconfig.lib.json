{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "module": "commonjs",
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": ["src/lib"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/setupTests.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts"
  ]
}